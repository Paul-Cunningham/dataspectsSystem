version: "3"
services:
  db:
    image: mariadb:latest
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_password }}
    volumes:
      - mariadb_data:/var/lib/mysql
  web:
    image: dataspects/docker-apache-php:latest
    ports:
      - "80:80"
    volumes:
      - mediawiki_root:/var/www/html/w
  parsoid:
    image: dataspects/docker-parsoid:latest
    ports:
      - "8000:8000"
    environment:
      PARSOID_DOMAIN_localhost: http://web/w/api.php
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:6.4.2
    environment:
      - cluster.name=docker-cluster
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - esdata1:/usr/share/elasticsearch/data
    ports:
      - 9200:9200
    networks:
      - esnet
  elasticsearch2:
    image: docker.elastic.co/elasticsearch/elasticsearch:6.4.2
    environment:
      - cluster.name=docker-cluster
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - "discovery.zen.ping.unicast.hosts=elasticsearch"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - esdata2:/usr/share/elasticsearch/data
    networks:
      - esnet
  redis:
    image: redis:4.0.11-alpine
    ports:
      - 6379:6379
  tomcat:
    image: dataspects/docker-tomcat:latest
    ports:
      - 8080:8080
    volumes:
      - tomcat_root:/usr/local/tomcat/webapps
  tika:
    # https://wiki.apache.org/tika/TikaJAXRS#Using_prebuilt_Docker_image
    image: logicalspark/docker-tikaserver
    ports:
      - 9998:9998
volumes:
  mariadb_data:
    driver: local
  mediawiki_root:
    driver: local
  tomcat_root:
    driver: local
  esdata1:
    driver: local
  esdata2:
    driver: local
networks:
  esnet:
